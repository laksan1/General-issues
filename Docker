#Backend
FROM node:14
WORKDIR /usr/src/nikaserver
COPY package.json ./
RUN npm install
COPY . .
EXPOSE 5000
CMD [ "npm", "run", "dev", "--scripts-prepend-node-path=auto"]

#Mongo
# Use root/example as user/password credentials
version: '3.1'
services:
mongo:
    image: mongo
    restart: always
    environment:
    MONGO_INITDB_ROOT_USERNAME: root
    MONGO_INITDB_ROOT_PASSWORD: example
mongo-express:
    image: mongo-express
    restart: always
    ports:
    - 8081:8081
    environment:
    ME_CONFIG_MONGODB_ADMINUSERNAME: root
    ME_CONFIG_MONGODB_ADMINPASSWORD: example
    ME_CONFIG_MONGODB_URL: mongodb://root:example@mongo:27017/

- docker build

- docker run 7dfe9c0e2172 (Id or name) (Id of image)

- docker images

- docker ps — показывает список запущенных контейнеров

- docker pull mongo (example) - скачать определённый образ или набор образов (репозиторий)

